#!/usr/bin/env python
import math

from svg import Canvas, Path

canvas = Canvas(500, 500)
path = canvas.path(meta={'fill':'red', 'stroke':'#000'})
#path.move_to(100, 100)
#path.line_to(200, 100)
#path.line_to(200, 200)
path.move_to(250, 250)
path.arc(250, 250, 50, 0, 3 * math.pi / 2)
#path.line_to(250, 250)

path.close()

canvas.save('test.svg')


