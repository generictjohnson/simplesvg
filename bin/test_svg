#!/usr/bin/env python
import math

from svg import Canvas, Path

canvas = Canvas(500, 500)
path = canvas.path(meta={'fill':'red', 'stroke':'#000'})
#path.move_to(100, 100)
#path.line_to(200, 100)
#path.line_to(200, 200)
path.move_to(250, 250)
path.arc(250, 250, 50, 0, 3 * math.pi / 2)
#path.line_to(250, 250)
path.close()

canvas.rect(50, 50, 100, 75)
canvas.circle(25, 25, 20, fill="blue")
canvas.ellipse(50, 300, 25, 75, fill="f03")
canvas.line(10, 10, 10, 400, stroke="yellow")
canvas.polyline((20, 20), (20, 50), (50, 50), (50, 400), fill="none", stroke="0f0")
canvas.polyline((200, 200), (200, 250), (250, 250), (250, 200), fill="line", stroke="0f0")

canvas.save('test.svg')


